{
  "name": "trello-claude-sync",
  "version": "1.0.0",
  "description": "Development workflow automation tool for syncing TodoWrite tasks with Trello boards",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "trello-claude-sync": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "slash": "npm run build && node dist/slash-commands.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "trello",
    "mcp",
    "workflow",
    "development",
    "claude-code",
    "cli",
    "todo",
    "automation"
  ],
  "author": "CorbinatorX",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/corbintaylor/trello-claude-sync.git"
  },
  "homepage": "https://github.com/corbintaylor/trello-claude-sync",
  "bugs": {
    "url": "https://github.com/corbintaylor/trello-claude-sync/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    ".env.example"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "dotenv": "^16.4.5",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}